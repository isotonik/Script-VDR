fi
      echo "                    Premere il tasto [Invio] per continuare. . .               "; read enterKey;;
b) echo "Avete scelto di non installare la Skin NarrowHD."
      echo "                    Premere il tasto [Invio] per continuare. . .               "; read enterKey;;
esac
