    apt-get -y remove libvdpau1 libvdpau-dev;     apt-get -y auto-remove libvdpau1 libvdpau-dev;
    apt-get -y install libwayland-dev libva-dev libvdpau-dev
    clear
    echo "                    Adesso Installo libva-vdpau-driver 0.7.4"; sleep 4
    cd /usr/local/src;
    rm -r libva-vdpau-driver;
    cp /home/`logname`/sifinstallrepo/libva-vdpau-driver-0.7.4.tar.bz2 /usr/local/src/;
    tar xjf libva-vdpau-driver-0.7.4.tar.bz2; mv libva-vdpau-driver-0.7.4 libva-vdpau-driver; rm -r libva-vdpau-driver-0.7.4.tar.bz2;
    cp /home/`logname`/sifinstallrepo/vdpau_dump.patch $SRC/libva-vdpau-driver/src/; cd $SRC/libva-vdpau-driver/src/;
    patch -p0 < vdpau_dump.patch; sleep 1;
    cp /home/`logname`/sifinstallrepo/vdpau_decode.patch $SRC/libva-vdpau-driver/src/; cd $SRC/libva-vdpau-driver/src/;
    patch -p0 < vdpau_decode.patch; sleep 1;
    cp /home/`logname`/sifinstallrepo/utils_glx.patch $SRC/libva-vdpau-driver/src/; cd $SRC/libva-vdpau-driver/src/;
    patch -p0 < utils_glx.patch; sleep 1;
    cd $SRC/libva-vdpau-driver
    ./configure
    checkinstall --pkgname=libva-vdpau-driver --pkgversion="0.7.4-git" --pkgrelease=VAAPI-0.38.0 --backup=no --deldoc=yes --fstrans=no --default --pakdir=$PACKAGES
    rm /etc/ld.so.conf;
    touch /etc/ld.so.conf;
    echo 'include /etc/ld.so.conf.d/*.conf
/usr/local/lib
/usr/local/lib/dri' >> /etc/ld.so.conf;;




