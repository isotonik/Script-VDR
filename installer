#############################################################################################################################  
#############################################################################################################################
###                                                                                                                       ###
##                                                                                                                         ##
#                                                                                                                           #
7)                                        #########################################
                                          #                Utility                #
                                          #########################################


    clear        
    dialog --title "   ** Utility **   " --infobox "
   ----------------------------------------------
                Utility
   ----------------------------------------------
        [a]    Utilizzare Xineliboutput                
        [b]    Utilizzare Softhddevice                  
        [c]    Modifica Vdrrun               
        [d]    Modifica Start-xinelib            
        [e]    Modifica lista canali           
        [f]    Modifica setup.conf    
        [g]    Modifica oscam              
        [h]    Riconfigura lirc                        
        [i]    Nautilus  
        
        [z]    Skip    
        
   ---------------------------------------------- " 0 0
    echo -n "        Scegli  [a-z]:      " 
    read yourch
    case $yourch in
a) if cat /usr/local/bin/vdrrun | grep -q "xineliboutput";
then echo "Stai gia usando Xineliboupt"
else sudo sed -i "s|--lirc|& -P'xineliboutput -l none -r 37890 -p'|" /usr/local/bin/vdrrun & sudo sed -i "s|-P'softhddevice -f'||" /usr/local/bin/vdrrun
fi;;
b) if cat /usr/local/bin/vdrrun | grep -q "softhddevice";
then echo "Stai gia usando Softdhdevice"
else sudo sed -i "s|--lirc|& -P'softhddevice -f'|" /usr/local/bin/vdrrun & sudo sed -i "s|-P'xineliboutput -l none -r 37890 -p'||" /usr/local/bin/vdrrun
fi;;
c) gedit /usr/local/bin/vdrrun;;
d) gedit /usr/local/bin/start-xinelib-vdr.sh;;
e) gedit /etc/vdr/channels.conf;;
f) gedit /etc/vdr/setup.conf;;
g) if [ -f /usr/local/etc/oscam.server ];
then gedit /usr/local/etc/oscam.server; gedit /usr/local/etc/oscam.conf; gedit /usr/local/etc/oscam.user;
else echo "L'osso $Remind5"
fi;;
h) dpkg-reconfigure lirc;;
i) nautilus;;
l) ;;
esac
;;

    
    

