    echo "64bit detected"; 
sed -i ' 
s/CPUOPT     ?= pentium/CPUOPT     ?= athlon64/
s/PARALLEL   ?= PARALLEL_32_INT/PARALLEL   ?= PARALLEL_128_SSE2/' $VDRSRC/sc/Makefile
    else
       echo "32bit" 
    fi
cd ../..; make plugins; mkdir -p /etc/vdr/plugins/sc; cd /etc/vdr/plugins/sc; touch cardclient.conf;
echo "cccam:127.0.0.1:port:0/0000/0000:/tmp/camd.socket
cccam2:192.168.x.x:port:0/0000/0000:username:password
newcamd:127.0.0.1:port:0/0000/0000:username:password:0102030405060708091011121314" >> cardclient.conf;
