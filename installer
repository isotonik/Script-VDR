    case $yourch in
    
    
    
    
#############################################################################################################################  
#############################################################################################################################
###                                                                                                                       ###
##                                                                                                                         ##
#                                                                                                                           #    
                                          ########################################################
                                          #            Creazione avvio xinelib e xine            #
                                          ########################################################
                                          
                                          
# xinelib & xine 16:9
a) cd /etc/vdr; rm -r setup.conf;
#wget https://www.dropbox.com/s/873qnh3yxmnzo0o/setup16.tar.gz
cp /home/`logname`/sifinstallrepo/setup16.tar.gz /etc/vdr/;
tar -zxvf setup16.tar.gz; rm -r setup16.tar.gz;
dmesg | grep -i NVIDIA > $TEMP/nvcheck
if cat $TEMP/nvcheck | grep "loading NVIDIA UNIX "; then
   echo "NV driver Detected"; rm $TEMP/nvcheck;
rm -r /usr/local/bin/start-xinelib-vdr.sh
touch /usr/local/bin/start-xinelib-vdr.sh
echo "#!/bin/sh
"$Xinelib"" >> /usr/local/bin/start-xinelib-vdr.sh
chmod a+x /usr/local/bin/start-xinelib-vdr.sh
else
rm /usr/local/bin/start-xinelib-vdr.sh
touch /usr/local/bin/start-xinelib-vdr.sh
echo "#!/bin/sh
"$Xinelib1"" >> /usr/local/bin/start-xinelib-vdr.sh
chmod a+x /usr/local/bin/start-xinelib-vdr.sh
fi
# vdr-xine 16:9
if cat $TEMP/nvcheck | grep "loading NVIDIA UNIX "; then
   echo "NV driver Detected"; rm $TEMP/nvcheck;
 rm -r /usr/local/bin/start-vdr-xine.sh
 touch /usr/local/bin/start-vdr-xine.sh
 echo "#!/bin/sh
 "$Vdr_Xine"" >> /usr/local/bin/start-vdr-xine.sh
 chmod a+x /usr/local/bin/start-vdr-xine.sh
else
 rm /usr/local/bin/start-vdr-xine.sh
 touch /usr/local/bin/start-vdr-xine.sh
 echo "#!/bin/sh
 "$Vdr_Xine1"" >> /usr/local/bin/start-vdr-xine.sh
 chmod a+x /usr/local/bin/start-vdr-xine.sh
fi
;;
#  xinelib 4:3 
b) cd /etc/vdr; rm -r setup.conf;
#wget https://www.dropbox.com/s/81fd2z1ye192lnx/setup43.tar.gz
cp /home/`logname`/sifinstallrepo/setup43.tar.gz /etc/vdr/;
tar -zxvf setup43.tar.gz; rm -r setup43.tar.gz;
dmesg | grep -i NVIDIA > $TEMP/nvcheck
if cat $TEMP/nvcheck | grep "loading NVIDIA UNIX "; then
   echo "NV driver Detected"; rm $TEMP/nvcheck;
rm /usr/local/bin/start-xinelib-vdr.sh
touch /usr/local/bin/start-xinelib-vdr.sh
echo "#!/bin/sh
"$Xinelib"" >> /usr/local/bin/start-xinelib-vdr.sh
sed -i 's|--aspect=16:9 --width=1920 --height=1080|--aspect=4:3 --width=1280 --height=720|' /usr/local/bin/start-xinelib-vdr.sh
chmod a+x /usr/local/bin/start-xinelib-vdr.sh
else
rm /usr/local/bin/start-xinelib-vdr.sh
touch /usr/local/bin/start-xinelib-vdr.sh
echo "#!/bin/sh
"$Xinelib1"" >> /usr/local/bin/start-xinelib-vdr.sh
sed -i 's|--aspect=16:9 --width=1920 --height=1080|--aspect=4:3 --width=1280 --height=720|' /usr/local/bin/start-xinelib-vdr.sh
chmod a+x /usr/local/bin/start-xinelib-vdr.sh
fi
# xineui 4:3
if cat $TEMP/nvcheck | grep "loading NVIDIA UNIX "; then
   echo "NV driver Detected"; rm $TEMP/nvcheck;
 rm -r /usr/local/bin/start-vdr-xine.sh
 touch /usr/local/bin/start-vdr-xine.sh
 echo "#!/bin/sh
 "$Vdr_Xine"" >> /usr/local/bin/start-vdr-xine.sh
 chmod a+x /usr/local/bin/start-vdr-xine.sh
else
 rm /usr/local/bin/start-vdr-xine.sh
 touch /usr/local/bin/start-vdr-xine.sh
 echo "#!/bin/sh
 "$Vdr_Xine1"" >> /usr/local/bin/start-vdr-xine.sh
 chmod a+x /usr/local/bin/start-vdr-xine.sh
fi
esac
#
#
clear




