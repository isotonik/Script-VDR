c)   sudo add-apt-repository ppa:team-xbmc/xbmc-nightly; sudo apt-get update; sudo apt-get -y install kodi kodi-pvr-iptvsimple;;
 esac    
     echo "                    Premere il tasto [Invio] per continuare. . .               "; read enterKey;;
