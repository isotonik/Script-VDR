h)                                        #########################################
                                          #      Editor Grafico Lista Canali      #
                                          #########################################


    ###
    ##### Sezione Editor - Cle4vdr_0.5.3 ~ ChannelEditor_1.9.2.1  #####
    clear        
    dialog --title "   ** Download && Utilizzo Editor - Cle4vdr_0.5.3 ~ ChannelEditor_1.9.2.1 **   " --infobox "
   --------------------------------------------------------------
                     Editor Lista Canali
   --------------------------------------------------------------
        
        ****  Seleziona La Tua Scelta  **** 
        [a]    Download ~ Installazione ~ Cle4vdr_0.5.3 - qt amd64
        [b]    Download ~ Installazione ~ Cle4vdr_0.5.3 - gtk2 amd64
        [c]    Download ~ Installazione ~ Cle4vdr_0.5.3 - qt i386
        [d]    Download ~ Installazione ~ Cle4vdr_0.5.3 - gtk2 i386
        [e]    Utilizzo ~ Cle4vdr_0.5.3
        
        [f]    Download ~ Installazione ~ ChannelEditor_1.9.2.1
        [g]    Utilizzo ~ ChannelEditor_1.9.2.1

        
        [z]    Skip
        
        
   --------------------------------------------------------------        
        Note:
        - Utilizzo Editor - Directory di Lavoro ~ /etc/vdr/channels.conf
   -------------------------------------------------------------- " 0 0
    echo -n "        Scegli  [a-z]:      "
    read yourch
    case $yourch in

    a) apt-get -y install libqt4pas5; clear; cd $SRC; rm -r editor; mkdir editor; cd editor;
    wget http://cle4vdr.vdr-developer.org/files/cle4vdr.0.5.3-qt_amd64.tar.gz;
    tar -zxvf cle4vdr.0.5.3-qt_amd64.tar.gz; mv cle4vdr.0.5.3-qt_amd64 cle4vdr;;
    
    b) clear; cd $SRC; rm -r editor; mkdir editor; cd editor;
    wget http://cle4vdr.vdr-developer.org/files/cle4vdr.0.5.3-gtk2_amd64.tar.gz;
    tar -zxvf cle4vdr.0.5.3-gtk2_amd64.tar.gz; mv cle4vdr.0.5.3-gtk2_amd64 cle4vdr;;
    
    c) apt-get -y install libqt4pas5; clear; cd $SRC; rm -r editor; mkdir editor; cd editor;
    wget http://cle4vdr.vdr-developer.org/files/cle4vdr.0.5.3-qt.tar.gz;
    tar -zxvf cle4vdr.0.5.3-qt.tar.gz; mv cle4vdr.0.5.3-qt cle4vdr;;
    
    d) clear; cd $SRC; rm -r editor; mkdir editor; cd editor;
    wget http://cle4vdr.vdr-developer.org/files/cle4vdr.0.5.3-gtk2.tar.gz;
    tar -zxvf cle4vdr.0.5.3-gtk2.tar.gz; mv cle4vdr.0.5.3-gtk2 cle4vdr;;
        
    e) cd $SRC/editor/cle4vdr; ./cle4vdr;;
    
    f) clear; cd $SRC; rm -r editor; mkdir editor; cd editor;
    wget "https://sourceforge.net/projects/channeleditor/files/channeleditor/1.9.2/ChannelEditor_1.9.2.1.jar";;
    
    g) cd $SRC/editor; java -jar ChannelEditor_1.9.2.1.jar;;
    
    z) ;;
    esac
    ;;

    
    

