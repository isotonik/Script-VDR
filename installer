#############################################################################################################################  
#############################################################################################################################
###                                                                                                                       ###
##                                                                                                                         ##
#                                                                                                                           #
R1)                                       #########################################
                                          # Rimozione Directory Repository Locale #
                                          #########################################

   
    clear
    dialog --title "   ** Rimozione Directory Repository Locale **   " --infobox "
   ----------------------------------------------
        Che cosa vuoi rimuovere dai repository             
   ----------------------------------------------
          
   [a]  Sorgenti di VDR   
   [b]  Sorgenti di DVBAPI
   [c]  Sorgenti di SC  
   [d]  Tutto il contenuto
   [e]  Skip
   ---------------------------------------------- " 0 0
    echo -n "        Scegli  [a-e]:      "
    read yourch
    case $yourch in
    a) rm /home/`logname`/sifinstallrepo/vdr-2.2.0.tar.bz2;;
    b) rm -r /home/`logname`/sifinstallrepo/vdr-plugin-dvbapi;;
    c) rm -r /home/`logname`/sifinstallrepo/sc;;
    d) rm -r /home/`logname`/sifinstallrepo;;
    e) ;;
    esac
    echo " Premere il tasto [Invio] per continuare. . . "; read enterKey;;
    
    
    
    
#############################################################################################################################  
#############################################################################################################################
###                                                                                                                       ###
##                                                                                                                         ##
#                                                                                                                           #
2)                                        #########################################
                                          #                   YASM                #
                                          #########################################


    apt-get update && apt-get upgrade;
    apt-get install libpciaccess-dev checkinstall xserver-xorg-dev vainfo gcc build-essential pkg-config automake autoconf make autoproject;

    clear
    echo "                    Adesso Installo Yasm 1.3.0"; sleep 4

    cd /usr/local/src; 
    rm -rf yasm;
    cp /home/`logname`/sifinstallrepo/yasm-1.3.0.tar.gz /usr/local/src/;
    tar -zxvf yasm-1.3.0.tar.gz; mv yasm-1.3.0 yasm; rm -r yasm-1.3.0.tar.gz; cd yasm
    ./configure
    checkinstall --pkgname=yasm --pkgversion="1.3.0-git" --backup=no --deldoc=yes --fstrans=no --default --pakdir=$PACKAGES
    echo "                    Premere il tasto [Invio] per continuare. . .               "; read enterKey;;

    
    

#############################################################################################################################  
#############################################################################################################################
###                                                                                                                       ###
##                                                                                                                         ##
#                                                                                                                           #
R2)                                       #########################################
                                          #             Rimozione YASM            #
                                          #########################################


    clear
    echo "                    Adesso Rimuovo Yasm 1.3.0"; sleep 4
    apt-get purge -y yasm; rm -r /usr/local/src/yasm; rm /usr/local/src/packages/yasm*;
    echo "                    Premere il tasto [Invio] per continuare. . .               "; read enterKey;;

    
    

#############################################################################################################################  
#############################################################################################################################
###                                                                                                                       ###
##                                                                                                                         ##
#                                                                                                                           #
3)                                        #########################################
                                          #                  LIBDRM               #
                                          #########################################


    apt-get remove -y libdrm-dev;

    clear
    echo "                    Adesso Installo Libdrm 2.4.60"; sleep 4
    cd /usr/local/src
    rm -rf libdrm;
    cp /home/`logname`/sifinstallrepo/libdrm-2.4.60.tar.gz /usr/local/src/;  
    tar -zxvf libdrm-2.4.60.tar.gz; mv libdrm-2.4.60 libdrm; rm -r libdrm-2.4.60.tar.gz; cd libdrm
    ./configure --enable-silent-rules --enable-libkms --enable-udev --enable-largefile --enable-intel --enable-radeon
    checkinstall --pkgname=libdrm --pkgversion="2.4.60-git" --backup=no --deldoc=yes --fstrans=no --default --pakdir=$PACKAGES
    echo "                    Premere il tasto [Invio] per continuare. . .               "; read enterKey;;

    
    

