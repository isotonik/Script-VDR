12)                                       #########################################
                                          #        Configurazione VDR-2.2.0       #
                                          #########################################


    clear
    echo "                    Adesso Configuro VDR 2.2.0"; sleep 3
    # Installazione true type
#wget https://www.dropbox.com/s/bx97ikp7c1h2qj2/vdrsymbols.tar.gz;
cp /home/`logname`/sifinstallrepo/vdrsymbols.tar.gz /usr/share/fonts/truetype/;
cd /usr/share/fonts/truetype/
tar -zxvf vdrsymbols.tar.gz; rm -r vdrsymbols.tar.gz; 
# Icone Vdr
cd $SRC
#wget https://www.dropbox.com/s/dhap4gmzd2q77ug/vdr.jpeg.tar.gz;
cp /home/`logname`/sifinstallrepo/icone.tar.gz /usr/local/src/;
tar -zxvf icone.tar.gz; rm -r icone.tar.gz;
#
#    Creazione vdrrun    #
rm -r /usr/local/bin/vdrrun; touch /usr/local/bin/vdrrun;
if [ -s $VDRSRC/softhddevice ];
   then echo '#!/bin/bash

/usr/local/bin/vdr -c /etc/vdr -E /var/vdr -l 3 -u root '$PLUGIN1' -s /usr/local/bin/vdrpoweroff ' >> /usr/local/bin/vdrrun && chmod a+x /usr/local/bin/vdrrun
else echo '#!/bin/bash

/usr/local/bin/vdr -c /etc/vdr -E /var/vdr -l 3 -u root '$PLUGIN' -s /usr/local/bin/vdrpoweroff ' >> /usr/local/bin/vdrrun && chmod a+x /usr/local/bin/vdrrun
fi
#  Creazione /etc/init.d/vdr           
rm -r /etc/init.d/vdr; touch /etc/init.d/vdr 
echo '
#!/bin/sh
#
# To be copied to: /etc/init.d
# And type:
### BEGIN INIT INFO
# Provides:          VDR
# Required-Start:   
# Required-Stop:     
# Default-Start:     0 1 2 3 4 5 6
# Default-Stop:     
# Description:       Start, Stop or Restart VDR
### END INIT INFO

# Shell functions sourced from /etc/rc.status:
set -e

# Reset status of this service
# rc_reset
#
echo "Vdr init.d script using: $1" >> /var/log/vdr.log &
case "$1" in
    start)
        echo -n "Avvio VDR "
       /usr/local/bin/vdrrun >> /var/log/vdr.log &
        # Remember status and be verbose
        ;;
    stop)
        echo -n "Chiusura di VDR "
       killall vdrrun
       killall vdr
       killall vdr-sxfe
        # Remember status and be verbose
        ;;
    restart)
        echo -n "Riavvio di VDR "
        $0 stop
        $0 start

        # Remember status and be quiet
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac
exit 0
' >> /etc/init.d/vdr
chmod 755 /etc/init.d/vdr
#   Permessi per eseguire Vdr       
echo "%`logname` ALL=NOPASSWD: /etc/init.d/vdr" >> /etc/sudoers
#    Creazione /usr/local/bin/vdrpoweroff    
rm -r /usr/local/bin/vdrpoweroff; touch /usr/local/bin/vdrpoweroff
echo '#!/bin/sh
#nome file : arresto di xine-vdr "vdrpoweroff"
killall -9 vdrrun & killall -9 vdr & killall -9 vdr-sxfe
# & killall -9 oscam & shutdown -h now '  >> /usr/local/bin/vdrpoweroff
# per spegnere pc affiungere al vdrpoweroff
# & shutdown -h now 
#
chmod 755 /usr/local/bin/vdrpoweroff
#
# script avvio xinelib & scrittura setup.conf
#
#
#    echo "*** monitor setup ***"; sleep 3
    clear
    dialog --title "   ** monitor setup **   " --infobox "
   ----------------------------------------------
                 Che monitor hai ?             
   ----------------------------------------------          
	[a]  16:9	
	[b]  4:3   
          
   ---------------------------------------------- " 0 0
    echo -n "        Scegli  [a-b]:      "
    read yourch
    case $yourch in
##################################################
#      Creazione avvio xinelib                   #
################################################## 
# xinelib 16:9
a) cd /etc/vdr; rm -r setup.conf;
#wget https://www.dropbox.com/s/873qnh3yxmnzo0o/setup16.tar.gz
cp /home/`logname`/sifinstallrepo/setup16.tar.gz /etc/vdr/;
tar -zxvf setup16.tar.gz; rm -r setup16.tar.gz;
dmesg | grep -i NVIDIA > $TEMP/nvcheck
if cat $TEMP/nvcheck | grep "loading NVIDIA UNIX "; then
   echo "NV driver Detected"; rm $TEMP/nvcheck;
rm -r /usr/local/bin/start-xinelib-vdr.sh
touch /usr/local/bin/start-xinelib-vdr.sh
echo "#!/bin/sh
"$Xinelib"" >> /usr/local/bin/start-xinelib-vdr.sh
chmod a+x /usr/local/bin/start-xinelib-vdr.sh
else
rm /usr/local/bin/start-xinelib-vdr.sh
touch /usr/local/bin/start-xinelib-vdr.sh
echo "#!/bin/sh
"$Xinelib1"" >> /usr/local/bin/start-xinelib-vdr.sh
chmod a+x /usr/local/bin/start-xinelib-vdr.sh
fi
;;
#  xinelib 4:3 
b) cd /etc/vdr; rm -r setup.conf;
#wget https://www.dropbox.com/s/81fd2z1ye192lnx/setup43.tar.gz
cp /home/`logname`/sifinstallrepo/setup43.tar.gz /etc/vdr/;
tar -zxvf setup43.tar.gz; rm -r setup43.tar.gz;
dmesg | grep -i NVIDIA > $TEMP/nvcheck
if cat $TEMP/nvcheck | grep "loading NVIDIA UNIX "; then
   echo "NV driver Detected"; rm $TEMP/nvcheck;
rm /usr/local/bin/start-xinelib-vdr.sh
touch /usr/local/bin/start-xinelib-vdr.sh
echo "#!/bin/sh
"$Xinelib"" >> /usr/local/bin/start-xinelib-vdr.sh
sed -i 's|--aspect=16:9 --width=1920 --height=1080|--aspect=4:3 --width=1280 --height=720|' /usr/local/bin/start-xinelib-vdr.sh
chmod a+x /usr/local/bin/start-xinelib-vdr.sh
else
rm /usr/local/bin/start-xinelib-vdr.sh
touch /usr/local/bin/start-xinelib-vdr.sh
echo "#!/bin/sh
"$Xinelib1"" >> /usr/local/bin/start-xinelib-vdr.sh
sed -i 's|--aspect=16:9 --width=1920 --height=1080|--aspect=4:3 --width=1280 --height=720|' /usr/local/bin/start-xinelib-vdr.sh
chmod a+x /usr/local/bin/start-xinelib-vdr.sh
fi
esac
